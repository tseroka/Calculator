<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MainActivity">


    <LinearLayout
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/result"
                android:background="#1000"
                android:textSize="24sp"
                android:gravity="center"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/digit_7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="7"
                android:textSize="18sp" android:onClick="appendToCalculation"/>

        <Button
                android:id="@+id/digit_8"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="8"
                android:textSize="18sp" android:onClick="appendToCalculation"/>

        <Button
                android:id="@+id/digit_9"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="9"
                android:textSize="18sp" android:onClick="appendToCalculation"/>


    </LinearLayout>

    <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/digit_4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="4"
                android:textSize="18sp" android:onClick="appendToCalculation"/>

        <Button
                android:id="@+id/digit_5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="5"
                android:textSize="18sp" android:onClick="appendToCalculation"/>

        <Button
                android:id="@+id/digit_6"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="6"
                android:textSize="18sp" android:onClick="appendToCalculation"/>


    </LinearLayout>

    <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/digit_1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="1"
                android:textSize="18sp" android:onClick="appendToCalculation"/>

        <Button
                android:id="@+id/digit_2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="2"
                android:textSize="18sp" android:onClick="appendToCalculation"/>

        <Button
                android:id="@+id/digit_3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="3"
                android:textSize="18sp" android:onClick="appendToCalculation"/>


    </LinearLayout>

    <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/dot"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="."
                android:textSize="18sp" android:onClick="appendToCalculation"/>


        <Button
                android:id="@+id/digit_0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="0"
                android:textSize="18sp" android:onClick="appendToCalculation"/>

        <Button
                android:id="@+id/calculate"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="="
                android:textSize="18sp" android:onClick="calculateResult"/>


    </LinearLayout>

    <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/add"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="+"
                android:textSize="18sp" android:onClick="appendToCalculation"/>

        <Button
                android:id="@+id/minus"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="-"
                android:textSize="18sp" android:onClick="appendToCalculation"/>

        <Button
                android:id="@+id/divide"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="/"
                android:textSize="18sp" android:onClick="appendToCalculation"/>

        <Button
                android:id="@+id/multiply"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="*"
                android:textSize="18sp" android:onClick="appendToCalculation"/>

    </LinearLayout>

    <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/right_parenthesis"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="("
                android:textSize="18sp" android:onClick="appendToCalculation"/>

        <Button
                android:id="@+id/lef_parenthesis"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text=")"
                android:textSize="18sp" android:onClick="appendToCalculation"/>

        <Button
                android:id="@+id/factor"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="!"
                android:textSize="18sp" android:onClick="appendToCalculation"/>


    </LinearLayout>

    <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/clear"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="CLEAR"
                android:textSize="18sp" android:onClick="clear"/>

        <Button
                android:id="@+id/undo"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="undo"
                android:textSize="18sp" android:onClick="undo"/>

    </LinearLayout>

</LinearLayout>